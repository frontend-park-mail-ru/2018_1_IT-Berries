<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <table class="profile__table">
        <tbody>
            <tr class="profile__row">
                <td><img src="/avatar" height="100" width="100"></img></td>
            </tr>
            <tr class="profile__row">
                <td>Username: </td>
                <td><fest:value>data.username</fest:value></td>
            </tr>
            <tr class="profile__row">
                <td>Email: </td>
                <td><fest:value>data.email</fest:value></td>
            </tr>
            <tr class="profile__row">
                <td>Score: </td>
                <td><fest:value>data.score</fest:value></td>
            </tr>
        </tbody>
    </table>
</fest:template>